<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTest.Dashboard"
             Title="Dashboard">
    <VerticalStackLayout>
       
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        
            <StackLayout MinimumHeightRequest="400" Spacing="15">
                <Label TextColor="White" Margin="10" HorizontalOptions="Center" FontSize="50">Login</Label>
                <Entry x:Name="EntUserName" HorizontalTextAlignment="Center" BackgroundColor="#232F34" TextColor="White" Placeholder="Username"></Entry>
                <Entry x:Name="EntPassword" IsPassword="True" HorizontalTextAlignment="Center" BackgroundColor="#232F34" TextColor="White" Placeholder="Password"></Entry>
                
                <Label TextColor="White" x:Name="LblEmail" >hier komt text</Label>

            </StackLayout>
    </VerticalStackLayout>
</ContentPage>